{
  "name": "clinic-backend-saas",
  "version": "1.0.0",
  "description": "Backend API para SaaS de Clínicas Estéticas",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "node prisma/seed.js",
    "prisma:reset": "prisma migrate reset --force",
    "seed": "node prisma/seed.js",
    "db:reset": "npm run prisma:reset && npm run seed",
    "build": "npm run prisma:generate",
    "postinstall": "prisma generate",
    "docker:build": "docker build -t clinic-api .",
    "docker:run": "docker run -p 3000:3000 clinic-api"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "keywords": [
    "clinic",
    "saas",
    "appointments",
    "beauty",
    "api"
  ],
  "author": "Santiago Ramirez",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@sendgrid/mail": "^8.1.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "google-auth-library": "^10.2.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "stripe": "^14.25.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^6.12.0",
    "supertest": "^6.3.3"
  }
}
