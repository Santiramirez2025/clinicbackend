{
  "name": "clinic-backend-saas",
  "version": "2.0.0",
  "description": "Backend API para SaaS de Clínicas Estéticas",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    
    "prisma:merge": "node merge-schema.js",
    "prisma:generate": "node merge-schema.js && prisma generate",
    "prisma:migrate": "node merge-schema.js && prisma migrate dev",
    "prisma:migrate:prod": "node merge-schema.js && prisma migrate deploy",
    "prisma:push": "node merge-schema.js && prisma db push",
    "prisma:studio": "prisma studio",
    "prisma:seed": "node prisma/seed.js",
    "prisma:reset": "node merge-schema.js && prisma migrate reset --force",
    "prisma:validate": "node merge-schema.js && prisma validate",
    "prisma:status": "prisma migrate status",
    
    "seed": "node prisma/seed.js",
    "db:reset": "npm run prisma:reset && npm run seed",
    "db:setup": "npm run prisma:generate && npm run seed",
    
    "build": "npm run prisma:generate",
    "postinstall": "npm run prisma:generate",
    
    "docker:build": "docker build -t clinic-api .",
    "docker:run": "docker run -p 3000:3000 clinic-api",
    
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "clinic",
    "saas",
    "appointments",
    "beauty",
    "api",
    "prisma",
    "express",
    "stripe"
  ],
  "author": "Santiago Ramirez",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@sendgrid/mail": "^8.1.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "google-auth-library": "^10.2.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "stripe": "^14.25.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.17.2",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "supertest": "^6.3.3",
    "typescript": "^5.9.2"
  }
}